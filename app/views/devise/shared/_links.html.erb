<div class="block text-center"> 
  <%- if controller_name != 'sessions' && controller_name != 'passwords' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-sky-600 hover:text-sky-700 font-bold " %>
  <% end %>
</div>

<div class="flex justify-between gap-x-2 gap-y-3 flex-wrap md:flex-nowrap mt-6 ">
  <%- if controller_name == 'passwords' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-sky-600 hover:text-sky-700 font-bold inline-block" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sky-600 hover:text-sky-700 font-bold inline-block" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-500 hover:text-gray-700 font-normal" %>
  <% end %>
</div>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-semibold" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-semibold" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "text-blue-500 hover:text-blue-700 font-semibold", data: { turbo: false } %><br />
  <% end %>
<% end %>
