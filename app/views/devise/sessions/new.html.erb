<div class="bg-white shadow-xl rounded-2xl px-6 pt-6 pb-8 max-w-full w-full md:max-w-[500px] md:mx-auto">
  <h1 class="text-sky-700 font-bold text-4xl border-b-2 mb-6 pb-6">LogIn</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="my-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autocomplete: "email", class: "bg-white rounded-lg pl-4 py-2 md:py-3 border-b border-gray-500 focus:border-0 focus:outline-0 w-full" %>
    </div>
     <div class="mb-4">
     <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
     <%= f.password_field :password, autocomplete: "current-password", class: "bg-white rounded-lg pl-4 py-2 md:py-3 border-b border-gray-500 focus:border-0 focus:outline-0 w-full" %>
     </div>
     <div>

     <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2 leading-tight " %>
        <%= f.label :remember_me, class: "text-sm font-semibold " %>
      </div>
     <% end %>
     <div class="mb-4 w-full">
      <%= f.submit "Log in", class: "bg-sky-600 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded-3xl focus:outline-none focus:shadow-outline w-full" %>
     </div>
  <% end %>

  <div class="flex items-center mb-4">
    <div class="border border-gray-500 h-full flex-grow"></div>
    <div class="mx-4 font-semibold">OR</div>
    <div class="border border-gray-500 h-full flex-grow"></div>
  </div>

  <%= render "devise/shared/links" %>
</div>
