<div class="bg-white shadow-xl rounded-2xl px-6 pt-6 pb-8 max-w-full w-full md:max-w-[500px] md:mx-auto">
  <h2 class="text-sky-700 font-bold text-3xl md:text-4xl border-b-2 mb-6 pb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="my-4">
      <%= f.label :password, "New password", class: "block text-gray-700 text-sm font-bold mb-2" %>
     
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "bg-white rounded-lg pl-4 py-2 md:py-3 border-b border-gray-500 focus:border-0 focus:outline-0 w-full mb-2" %>
      <% if @minimum_password_length %>
      <em class="text-sm text-gray-600 mb-2">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-white rounded-lg pl-4 py-2 md:py-3 border-b border-gray-500 focus:border-0 focus:outline-0 w-full" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Change my password", class: "bg-sky-600 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded-3xl focus:outline-none focus:shadow-outline w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
